# ============================================
# FastAPI Base Scaffold 配置文件
# ============================================

# ============================================
# 应用配置 (App Config)
# ============================================
APP_ENV=development
APP_DEBUG=true
APP_CORS_ORIGINS=*
APP_ENABLE_GZIP=true

# ============================================
# 数据库配置 (Database Config)
# ============================================
# 开发环境自动使用 SQLite (app/data/sqlite.db)
# 生产环境 (APP_ENV=production) 使用 MySQL，需配置以下参数：
DB_USER=root
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=fastapi_scaffold

# ============================================
# Redis 配置 (Redis Config)
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# JWT 配置 (JWT Config)
# ============================================
# 生产环境请修改为强随机字符串
JWT_SECRET_KEY=your_jwt_secret_key_here_please_change
JWT_EXPIRE_MINUTES=480
